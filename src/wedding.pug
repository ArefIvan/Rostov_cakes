include blocks/weddingCard/weddingCard
include components/button/button
include blocks/modal/modal


-let data = require("./data/data.json")
-let wd = data.weddingCards
-let pathImgWedCrds= "./assets/img/"






<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="Муссовые свадебные торты на заказ в Ростове-на-Дону.")
        meta(name="keywords", content="заказать торт, торт на заказ, торт на свадьбу, свадебный торт, муссовый торт")
        meta(name="language" content="Russian" )
        title  Свадебные муссовые торты от "Alice's Wonder Cakes"
    body
        .wrapper
            include blocks/header/header
            section.weddingCards
                h2.weddingCards__title.h2 Свадебные торты
                each val in wd
                    +weddingCard(val,pathImgWedCrds)
                    if val.name=="weight"
                        +button(["Расчитать вес торта"])(class="weddingCards__button weddingCards__button--weight openmodal modal--weight")
                    if val.name=="taste"
                        +button(["Популярные начинки"],"/#tastes")(class="weddingCards__button")
            +modal("modal--weight")
                include blocks/weightCalc/weightCalc
                    
            .openmodal(class="modal--subscribe")
                img(src=require("./img/svg/cheesecake.svg"), alt="subcribe")
                         
            +modal("modal--subscribe")
                include blocks/subscribe/subscribe
            include blocks/footer/footer